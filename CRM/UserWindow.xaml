<Window x:Class="ClassSchedule.UserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClassSchedule"
        mc:Ignorable="d"
        Title="UserWindow" Height="400" Width="300">
    <Grid>
        <ListView Name="UserList" Margin="5,20,5,0" Height="195" Width="280" VerticalAlignment="Top" HorizontalAlignment="Left">

            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Id" Width="30"  DisplayMemberBinding="{Binding User_Id}"/>
                    <GridViewColumn Header="Username" Width="100"  DisplayMemberBinding="{Binding User_Name}"/>
                    <GridViewColumn Header="Password" Width="150" DisplayMemberBinding="{Binding User_Password}"/>
                    
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
