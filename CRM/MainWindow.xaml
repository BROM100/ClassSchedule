<Window x:Class="CRM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CRM"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="900">
    <Grid>
        <ListView d:ItemsSource="{d:SampleData ItemCount=5}" Height="300" VerticalAlignment="Top">
            ">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID" DisplayMemberBinding="{Binding ID}" />
                    <GridViewColumn Header="Client" DisplayMemberBinding="{Binding Client NAme}" />
                    <GridViewColumn Header="Adress" DisplayMemberBinding="{Binding Status}" />
                </GridView>
            </ListView.View>
        </ListView>


    </Grid>
</Window>
