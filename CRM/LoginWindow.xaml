<Window x:Class="ClassSchedule.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClassSchedule"
        mc:Ignorable="d"
        Title="LoginWindow" Height="400" Width="400">
    <Grid>
        <TextBox x:Name="UsernameTextBox" Margin="90,122,90,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120" TextAlignment="Center" Background="Gray" RenderTransformOrigin="0.472,0.495" Height="25" FontWeight="Normal"/>
        <PasswordBox x:Name="PasswordBox" HorizontalAlignment="Center" Margin="0,169,0,0" VerticalAlignment="Top" Width="120" Background="Gray" Height="25"/>
        <Button x:Name="SubmitButton" Content="Submit" HorizontalAlignment="Center" Margin="0,216,0,0" VerticalAlignment="Top" Background="#FF6170C3" Width="100" Height="30" Click="SubmitButton_Click"/>
        <Label Content="Username" HorizontalAlignment="Center" Margin="0,91,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.058,0.304"/>
        <Label Content="Password" HorizontalAlignment="Center" Margin="120,147,115,0" VerticalAlignment="Top" RenderTransformOrigin="-0.058,0.304"/>


    </Grid>
</Window>
